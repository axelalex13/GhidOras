<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/card_view"
    android:layout_width="match_parent"
    android:layout_height="380dp"
    android:layout_margin="8dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/thumbnail"
            android:layout_width="match_parent"
            android:layout_height="250dp"
            android:layout_alignParentTop="true"
            android:scaleType="centerCrop"
            android:src="@drawable/intercontin_noaptea" />

        <TextView
            android:id="@+id/titlu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/thumbnail"
            android:maxLines="3"
            android:padding="8dp"
            android:text="Eveniment"
            android:textColor="#222"
            android:textSize="22dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/descriere"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:maxLines="3"
            android:padding="8dp"
            android:text="Cel mai tare eveniment"
            android:textColor="#666"
            android:textSize="14dp"
            android:layout_below="@+id/titlu"
            android:layout_alignParentStart="true"
            android:layout_marginTop="16dp" />

        <TextView
            android:id="@+id/dates"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/descriere"
            android:layout_marginBottom="11dp"
            android:layout_marginStart="15dp"
            android:layout_toEndOf="@+id/descriere"
            android:text="08.12.2017 - 09.12.2017" />

        <TextView
            android:id="@+id/locatie"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="13dp"
            android:text="Parcul Izvor"
            android:layout_below="@+id/titlu"
            android:layout_alignParentStart="true" />


    </RelativeLayout>
</android.support.v7.widget.CardView>