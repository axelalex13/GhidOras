<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_marginBottom="30dp">


    <android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/card_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="4dp"
        card_view:cardMaxElevation="1dp"
        card_view:cardElevation="1dp"
        android:background="@drawable/card_edge">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/gri"
            >

            <ImageView
                android:id="@+id/coperta"
                android:layout_width="match_parent"
                android:layout_height="250dp"
                android:layout_alignParentTop="true"
                android:scaleType="centerCrop"
                android:src="@drawable/herastrau" />

            <TextView
                android:id="@+id/titlu"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/coperta"
                android:layout_marginTop="14dp"
                android:maxLines="3"
                android:padding="8dp"
                android:text="Eveniment"
                android:textColor="#222"
                android:textSize="22dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/descriere"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignStart="@+id/locatie"
                android:layout_below="@+id/locatie"
                android:layout_alignParentStart="true"
                android:maxLines="3"
                android:padding="8dp"
                android:text="Cel mai tare eveniment"
                android:textColor="#666"
                android:textSize="14dp" />

            <TextView
                android:id="@+id/dates"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:layout_marginStart="130dp"
                android:layout_below="@+id/coperta"
                android:text="08.12.2017 - 09.12.2017" />

            <TextView
                android:id="@+id/locatie"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/titlu"

                android:padding="8dp"
                android:text="Parcul Izvor"
                />


        </RelativeLayout>
    </android.support.v7.widget.CardView>

</LinearLayout>